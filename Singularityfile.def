Bootstrap: library
From: debian:9
%post
    apt-get update && apt-get -y upgrade
    apt-get -y install \
    build-essential \
    wget \
    bzip2 \
    ca-certificates \
    libglib2.0-0 \
    libxext6 \
    libsm6 \
    libxrender1 \
    git 
    rm -rf /var/lib/apt/lists/*
    apt-get clean

    #Installing Anaconda 3 
    wget -c https://repo.anaconda.com/archive/Anaconda3-2020.02-Linux-x86_64.sh
    /bin/bash Anaconda3-2020.02-Linux-x86_64.sh -bfp /usr/local
    rm Anaconda3-2020.02-Linux-x86_64.sh

    #Conda configuration of channels from .condarc file
    conda config --file /.condarc --add channels defaults
    conda config --file /.condarc --add channels conda-forge
    conda update conda
    conda install -c conda-forge tensorboard
    conda install -c conda-forge protobuf
    
    #Install submodules
    git clone https://github.com/pouya1991/AIMLab_submodule_utils.git
    pip install -e ./AIMLab_submodule_utils
    git clone https://github.com/pouya1991/AIMLab_submodule_cv.git
    pip install -e ./AIMLab_submodule_cv
    rm -rf AIMLab_submodule_utils
    rm -rf AIMLab_submodule_cv


%runscript
    python app.py $*
